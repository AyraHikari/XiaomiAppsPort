        <ImageView android:enabled="false" android:layout_gravity="end" android:id="@id/save" android:layout_width="@dimen/burst_preview_action_button_size" android:layout_height="fill_parent" android:src="@drawable/photo_editor_confirm_button_selector" android:scaleType="center" android:contentDescription="@string/operation_save" android:layout_marginEnd="@dimen/burst_preview_action_button_left_margin" />
    </FrameLayout>
</LinearLayout>