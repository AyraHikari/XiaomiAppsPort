<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:pagerIndicator="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:orientation="vertical" android:clipChildren="false" android:clipToPadding="false" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <com.miui.gallery.widget.PagerIndicator android:gravity="center" android:layout_gravity="center_horizontal" android:id="@id/indicator" android:layout_width="@dimen/burst_preview_pager_indicator_size" android:layout_height="@dimen/burst_preview_pager_indicator_size" android:layout_marginBottom="@dimen/burst_preview_pager_indicator_margin_bottom" pagerIndicator:circle_radius="@dimen/burst_preview_pager_indicator_radius" pagerIndicator:circle_spacing="0.0dip" pagerIndicator:selected_color="@color/burst_preview_pager_indicator_color" pagerIndicator:shown_only_one_page="true" />
