<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="fill_horizontal" android:orientation="horizontal" android:padding="@dimen/ocr_popup_window_margin" android:layout_width="wrap_content" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.core.widget.NestedScrollView android:id="@id/all_popup_window" android:background="@drawable/ocr_popup_window_bg" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center_vertical|clip_horizontal" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <FrameLayout android:id="@id/ocr_search_area" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/Gallery.Widget.PopUpWindow.StartIcon">
                <ImageView android:layout_gravity="center" android:id="@id/ocr_search" android:background="@drawable/ocr_search" android:layout_width="@dimen/ocr_image_size" android:layout_height="@dimen/ocr_image_size" />
            </FrameLayout>
            <FrameLayout android:id="@id/ocr_call_area" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/Gallery.Widget.PopUpWindow.StartIcon">
                <ImageView android:layout_gravity="center" android:id="@id/ocr_call" android:background="@drawable/ic_ocr_call" android:layout_width="@dimen/ocr_image_size" android:layout_height="@dimen/ocr_image_size" />
            </FrameLayout>
            <FrameLayout android:id="@id/ocr_link_area" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/Gallery.Widget.PopUpWindow.StartIcon">
                <ImageView android:layout_gravity="center" android:id="@id/ocr_editor_link" android:background="@drawable/ic_ocr_link" android:layout_width="@dimen/ocr_image_size" android:layout_height="@dimen/ocr_image_size" />
            </FrameLayout>
            <FrameLayout android:id="@id/ocr_email_area" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/Gallery.Widget.PopUpWindow.StartIcon">
                <ImageView android:layout_gravity="center" android:id="@id/ocr_email" android:background="@drawable/ocr_ic_email" android:layout_width="@dimen/ocr_image_size" android:layout_height="@dimen/ocr_image_size" />
            </FrameLayout>
            <TextView android:gravity="center" android:id="@id/ocr_copy" android:text="@string/ocr_copy" style="@style/Gallery.Widget.PopUpWindow.TextView" />
            <TextView android:gravity="center" android:id="@id/ocr_select_all" android:text="@string/select_all" style="@style/Gallery.Widget.PopUpWindow.TextView" />
            <TextView android:gravity="center" android:id="@id/ocr_editor_extract" android:text="@string/ocr_extract" style="@style/Gallery.Widget.PopUpWindow.TextView" />
            <TextView android:gravity="center" android:id="@id/ocr_translation" android:text="@string/ocr_translation" style="@style/Gallery.Widget.PopUpWindow.TextView" />
            <FrameLayout android:id="@id/ocr_share_area" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/Gallery.Widget.PopUpWindow.EndIcon">
                <ImageView android:layout_gravity="center" android:id="@id/ocr_share" android:background="@drawable/ocr_share" android:layout_width="@dimen/ocr_image_size" android:layout_height="@dimen/ocr_image_size" />
            </FrameLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>