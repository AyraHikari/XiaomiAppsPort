<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/window_background" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:orientation="vertical" android:id="@id/top_panel" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/cleaner_item_content_margin_top">
        <RelativeLayout android:id="@id/content_layout" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/cleaner_item_title_text" android:textStyle="bold" android:textColor="@color/cleaner_item_title_text" android:id="@id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/slim_preference_title" android:textDirection="locale" android:layout_toStartOf="@id/size" android:layout_alignParentStart="true" />
            <Button android:textSize="@dimen/cleaner_item_action_text" android:textColor="@color/cleaner_item_action_text" android:layout_gravity="center" android:id="@id/action" android:background="@drawable/cleaner_action_bg" android:layout_width="@dimen/cleaner_item_action_width" android:layout_height="@dimen/cleaner_item_action_height" android:layout_marginTop="@dimen/cleaner_item_action_margin_top" android:text="@string/slim_action_auto_backup" android:fontFamily="miui-bold" android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <FrameLayout android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@id/disable_container" android:background="@drawable/slim_background" android:layout_width="fill_parent" android:layout_height="@dimen/cleaner_slim_action_bg_height" android:layout_marginTop="@dimen/slim_bg_margin_top">
            <LinearLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1.0" android:layout_marginStart="@dimen/slim_tip_margin_start" style="@style/SlimBackupDisableOrientation">
                <TextView android:textSize="@dimen/slim_tip_text_size" android:textColor="@color/white_100_transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/slim_action_auto_backup_tip" android:fontFamily="mipro-medium" android:layout_marginEnd="@dimen/slim_tip_margin_start" />
                <TextView android:textSize="@dimen/slim_tip_text_size" android:textColor="@color/white_100_transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/slim_action_auto_backup_sub_tip" style="@style/SlimBackupDisableOrientationMargin" />
            </LinearLayout>
        </FrameLayout>
        <TextView android:textSize="@dimen/cleaner_item_description_text" android:textColor="@color/cleaner_item_bottom_description_text" android:id="@id/description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/cleaner_item_description_margin_top" android:layout_marginBottom="@dimen/cleaner_item_description_margin_bottom" android:text="@string/slim_action_auto_backup_disable_description" android:layout_below="@id/title" android:textDirection="locale" android:layout_alignParentStart="true" />
    </LinearLayout>
</LinearLayout>